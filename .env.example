# Firebase Configuration (Required)
# Get these values from Firebase Console > Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your_project-default-rtdb.firebaseio.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Hugging Face API for AI QR Art Generation (Optional)
# Get your token from: https://huggingface.co/settings/tokens
# Only required if using AI QR generation features
HUGGING_FACE_API_TOKEN=your_hugging_face_token

# Application Settings
# Update these based on your deployment environment
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=HOYN!

# Analytics (Optional)
# Google Analytics tracking ID for website analytics
NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_id

# Development Settings (Optional)
# Set to 'development' for local development, 'production' for live site
NODE_ENV=development

# Security Settings (Production Only)
# Generate a secure random string for NextAuth.js
# Use: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=http://localhost:3000